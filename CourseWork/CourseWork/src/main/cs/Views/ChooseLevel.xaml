            </Button.InputBindings>
        </Button>
        <Button Grid.ColumnSpan="5" Content="3" Grid.Column="17" Grid.Row="15" Grid.RowSpan="6" Background="#FFC0F602" FontSize="40" Foreground="#FF007AFF" IsEnabled="{Binding IsEnabledLevel3}"/>
        <Button  Content="{Binding BackButtonContent}" Background="#FF203FC0"  Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="1" Grid.RowSpan="3" FontSize="30" Foreground="Yellow" >
            <Button.InputBindings>
                <MouseBinding Command="{Binding BackButtonClickCommand}" MouseAction="LeftClick"/>
            </Button.InputBindings>
        </Button>
        <Button Grid.ColumnSpan="5" Grid.Row="6"  Content="{Binding TrainingText}" Grid.Column="9" Grid.RowSpan="6" Background="#FFC0F602" FontSize="40" Foreground="#FF0473EB">
            <Button.InputBindings>
                <MouseBinding Command="{Binding StartTrainingCommand}" MouseAction="LeftClick"/>
            </Button.InputBindings>
        </Button>
        <Image Grid.ColumnSpan="1" Grid.Column="5"  Grid.Row="15" Grid.RowSpan="1"  Source="/CourseWork;component/src/main/resources/img/rauta_news_2022-02-28-1.jpg" Stretch="Fill" Visibility="{Binding Level1PassedVisibility}">
