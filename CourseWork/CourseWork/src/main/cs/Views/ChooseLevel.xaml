                <MouseBinding Command="{Binding Level1Click}" MouseAction="LeftClick"/>
            </Button.InputBindings>
        </Button>
        <Button Grid.ColumnSpan="5" Content="2" Grid.Column="9" Grid.Row="15" Grid.RowSpan="6" Background="#FFC0F602" FontSize="40" Foreground="#FF0373EE" IsEnabled="{Binding IsEnabledLevel2}">
